{
  "schemaVersion": 1,
  "id": "fglider",
  "version": "${version}",

  "name": "Fabric Glider",
  "description": "A Fabric mod that adds simple gliders to modern Minecraft versions.",
  "authors": [
    "Chunky_Monkey54"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/members/starslayer_/projects",
    "sources": "https://github.com/ChunkyMonkey54/fabric-glider"
  },

  "license": "MIT License",
  "icon": "assets/modid/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "net.chunkymonkey.fglider.FabricGlider"
    ],
    "client": [
      "net.chunkymonkey.fglider.FabricGliderClient"
    ]
  },
  "mixins": [
    "fglider.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.10",
    "fabric-api": "*",
    "minecraft": "~1.19",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
